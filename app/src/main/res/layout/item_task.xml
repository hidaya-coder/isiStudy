<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:elevation="4dp"
    android:outlineProvider="bounds">

    <!-- En-tÃªte de la tÃ¢che avec checkbox, titre et bouton suppression -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/taskCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name Task :"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/deleteTaskButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_delete"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Supprimer la tÃ¢che" />

    </LinearLayout>

    <!-- Ligne 1: Date et Heure -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <!-- Date -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Date:"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/dueDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#555555" />

        </LinearLayout>

        <!-- Heure -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ•’ Time :"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/dueTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#555555" />

        </LinearLayout>

    </LinearLayout>

    <!-- Ligne 2: DurÃ©e estimÃ©e -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated Minutes :"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/estimatedMinutesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#555555" />

    </LinearLayout>

    <!-- Bouton Pomodoro -->
    <Button
        android:id="@+id/startPomodoroButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Pomodoro"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_button"
        android:textSize="16sp"
        android:padding="12dp"
        android:fontFamily="@font/nunito_sans" />

</LinearLayout>